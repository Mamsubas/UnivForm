<script>
    function toggleStudentType() {
        const highSchool = document.querySelector('input[value="HighSchool"]').checked;
        const university = document.querySelector('input[value="University"]').checked;

        const highSchoolFields = document.getElementById('highSchoolFields');
        const universityFields = document.getElementById('universityFields');

        if (highSchool) {
            highSchoolFields.classList.remove('hidden');
            universityFields.classList.add('hidden');
            document.getElementById('highSchoolOption').style.borderColor = '#3b82f6';
            document.getElementById('highSchoolOption').style.backgroundColor = '#eff6ff';
            document.getElementById('universityOption').style.borderColor = '#ddd';
            document.getElementById('universityOption').style.backgroundColor = 'transparent';
        } else if (university) {
            highSchoolFields.classList.add('hidden');
            universityFields.classList.remove('hidden');
            document.getElementById('universityOption').style.borderColor = '#3b82f6';
            document.getElementById('universityOption').style.backgroundColor = '#eff6ff';
            document.getElementById('highSchoolOption').style.borderColor = '#ddd';
            document.getElementById('highSchoolOption').style.backgroundColor = 'transparent';
        } else {
            highSchoolFields.classList.add('hidden');
            universityFields.classList.add('hidden');
            document.getElementById('highSchoolOption').style.borderColor = '#ddd';
            document.getElementById('highSchoolOption').style.backgroundColor = 'transparent';
            document.getElementById('universityOption').style.borderColor = '#ddd';
            document.getElementById('universityOption').style.backgroundColor = 'transparent';
        }
    }

    // Sayfa yÃ¼klendiÄŸinde Ã¶nceki seÃ§imi geri yÃ¼kle
    window.addEventListener('load', function() {
        toggleStudentType();
    });
</script>

