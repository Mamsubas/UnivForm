@model Category
@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-lg border border-red-200">
    <h1 class="text-3xl font-bold text-red-700 mb-4">Kategoriyi Sil</h1>
    <h3 class="text-lg text-gray-800 mb-6">"<strong>@Model.Title</strong>" başlıklı kategoriyi silmek istediğinizden emin misiniz?</h3>
    
    <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
        <dl class="divide-y divide-gray-200">
            <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-gray-500">ID</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.Id</dd>
            </div>
            <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-gray-500">Başlık</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.Title</dd>
            </div>
            <div class="py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-gray-500">Açıklama</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.Description</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        @* Silinecek olan ID'yi forma gizli olarak ekliyoruz *@
        <input type="hidden" asp-for="Id" />
        
        <div class="flex items-center gap-4">
            <button type="submit" class="bg-red-600 text-white hover:bg-red-700 font-bold py-2 px-5 rounded-lg transition-all duration-300 shadow-md">
                Evet, Sil
            </button>
            <a asp-action="Index" class="text-gray-600 hover:text-gray-800 font-medium bg-gray-100 hover:bg-gray-200 py-2 px-5 rounded-lg border border-gray-300">
                Hayır, Geri Dön
            </a>
        </div>
    </form>
</div>