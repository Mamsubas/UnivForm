@model IEnumerable<UnivForm.Controllers.AdminController.AdminUserViewModel>

@{
    ViewData["Title"] = "Y√∂netici - Kullanƒ±cƒ± Y√∂netimi";
}

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Y√∂netim Paneli</h1>
        <div class="space-x-2">
            <a href="/Admin/Roles" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded">
                üé≠ Roller
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
            @TempData["ErrorMessage"]
        </div>
    }
    else { <!-- Remove duplicate --> }

    <!-- Dashboard Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
            <p class="text-gray-600 text-sm">Toplam Kullanƒ±cƒ±</p>
            <p class="text-4xl font-bold text-blue-600 mt-2">@ViewBag.TotalUsers</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <p class="text-gray-600 text-sm">Aktif Kullanƒ±cƒ±</p>
            <p class="text-4xl font-bold text-green-600 mt-2">@ViewBag.ActiveUsers</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <p class="text-gray-600 text-sm">Toplam Soru</p>
            <p class="text-4xl font-bold text-indigo-600 mt-2">@ViewBag.TotalThreads</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <p class="text-gray-600 text-sm">Toplam Cevap</p>
            <p class="text-4xl font-bold text-purple-600 mt-2">@ViewBag.TotalPosts</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <p class="text-gray-600 text-sm">Rol Sayƒ±sƒ±</p>
            <p class="text-4xl font-bold text-red-600 mt-2">@ViewBag.TotalRoles</p>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="w-full text-sm">
            <thead class="bg-gray-100">
                <tr class="text-left text-gray-600">
                    <th class="px-4 py-3">Adƒ±</th>
                    <th class="px-4 py-3">E-Posta</th>
                    <th class="px-4 py-3">Roller</th>
                    <th class="px-4 py-3">G√∂nderiler</th>
                    <th class="px-4 py-3">Durum</th>
                    <th class="px-4 py-3">√úye Olunca</th>
                    <th class="px-4 py-3">Son Giri≈ü</th>
                    <th class="px-4 py-3">ƒ∞≈ülemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr class="border-t hover:bg-gray-50">
                        <td class="px-4 py-3 font-medium">@u.Name</td>
                        <td class="px-4 py-3">@u.Email</td>
                        <td class="px-4 py-3">
                            @if (u.Roles.Any())
                            {
                                @foreach (var role in u.Roles)
                                {
                                    <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded text-xs mr-1">@role</span>
                                }
                            }
                            else
                            {
                                <span class="text-gray-500 text-xs">Rol yok</span>
                            }
                        </td>
                        <td class="px-4 py-3">
                            <a href="/Admin/UserPosts/@u.Id" class="text-indigo-600 hover:text-indigo-800 font-medium">
                                @u.PostCount
                            </a>
                        </td>
                        <td class="px-4 py-3">
                            @if (u.IsActive)
                            {
                                <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">Aktif</span>
                            }
                            else
                            {
                                <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs">Pasif</span>
                            }
                        </td>
                        <td class="px-4 py-3 text-xs">@u.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td class="px-4 py-3 text-xs">
                            @if (u.LastLogin.HasValue)
                            {
                                @u.LastLogin.Value.ToString("dd.MM.yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-gray-500">Hen√ºz</span>
                            }
                        </td>
                        <td class="px-4 py-3 space-x-1 flex flex-wrap gap-1">
                            <form asp-action="ToggleAdmin" method="post" class="inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-2 py-1 rounded text-xs">
                                    @(u.IsAdmin ? "Admin Kaldƒ±r" : "Admin Yap")
                                </button>
                            </form>

                            <form asp-action="ToggleActive" method="post" class="inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="bg-gray-600 hover:bg-gray-700 text-white px-2 py-1 rounded text-xs">
                                    @(u.IsActive ? "Devre Dƒ±≈üƒ±" : "Aktif")
                                </button>
                            </form>

                            <a href="/Admin/WarnUser/@u.Id" class="bg-yellow-600 hover:bg-yellow-700 text-white px-2 py-1 rounded text-xs inline-block">
                                ‚ö†Ô∏è Uyar
                            </a>

                            @if (u.IsBanned)
                            {
                                <a href="/Admin/UnbanUser/@u.Id" class="bg-green-600 hover:bg-green-700 text-white px-2 py-1 rounded text-xs inline-block">
                                    ‚úì Yasak Kaldƒ±r
                                </a>
                            }
                            else
                            {
                                <a href="/Admin/BanUser/@u.Id" class="bg-red-600 hover:bg-red-700 text-white px-2 py-1 rounded text-xs inline-block">
                                    üö´ Yasakla
                                </a>
                            }

                            <form asp-action="DeleteUser" method="post" class="inline" onsubmit="return confirm('Bu kullanƒ±cƒ±yƒ± ve t√ºm verilerini silmek istediƒüinize emin misiniz?');">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="bg-black hover:bg-gray-800 text-white px-2 py-1 rounded text-xs">
                                    üóëÔ∏è Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
