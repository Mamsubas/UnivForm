@model IEnumerable<UnivForm.Controllers.AdminController.AdminUserViewModel>

@{
    ViewData["Title"] = "Yönetici - Kullanıcı Yönetimi";
}

<div class="max-w-6xl mx-auto">
    <h1 class="text-2xl font-bold mb-4">Kullanıcı Yönetimi</h1>

    <div class="bg-white rounded-lg shadow p-6">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
                @TempData["SuccessMessage"]
            </div>
        }
        <table class="w-full table-auto">
            <thead>
                <tr class="text-left text-sm text-gray-600">
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">İsim</th>
                    <th class="px-4 py-2">E-Posta</th>
                    <th class="px-4 py-2">Admin</th>
                    <th class="px-4 py-2">Aktif</th>
                    <th class="px-4 py-2">Eylemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr class="border-t">
                        <td class="px-4 py-3">@u.Id</td>
                        <td class="px-4 py-3">@u.Name</td>
                        <td class="px-4 py-3">@u.Email</td>
                        <td class="px-4 py-3">@(u.IsAdmin ? "Evet" : "Hayır")</td>
                        <td class="px-4 py-3">@(u.IsActive ? "Evet" : "Hayır")</td>
                        <td class="px-4 py-3">
                            <form asp-action="ToggleAdmin" method="post" class="inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="px-3 py-2 bg-indigo-600 text-white rounded mr-2">
                                    @(u.IsAdmin ? "Admin Kaldır" : "Admin Yap")
                                </button>
                            </form>

                            <form asp-action="ToggleActive" method="post" class="inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="px-3 py-2 bg-gray-600 text-white rounded">
                                    @(u.IsActive ? "Devre Dışı Bırak" : "Etkinleştir")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
