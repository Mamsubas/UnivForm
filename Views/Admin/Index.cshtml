@model IEnumerable<UnivForm.Controllers.AdminController.AdminUserViewModel>

@{
    ViewData["Title"] = "Y√∂netici - Kullanƒ±cƒ± Y√∂netimi";
}

<div class="max-w-7xl mx-auto animate-fade-in">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent mb-2">
                <i class="fas fa-tachometer-alt mr-2"></i>Y√∂netim Paneli
            </h1>
            <p class="text-gray-600">Sistem kullanƒ±cƒ±larƒ±nƒ± ve izinlerini y√∂netin</p>
        </div>
        <div class="space-x-3 flex">
            <a href="/Admin/Roles" class="btn-primary inline-flex items-center">
                <i class="fas fa-theater-masks mr-2"></i>Roller
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-6 animate-slide-down">
            <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-l-4 border-green-500 text-green-700 px-6 py-4 rounded-lg shadow-md">
                <i class="fas fa-check-circle mr-2 text-lg"></i>
                <strong>Ba≈üarƒ±lƒ±!</strong> @TempData["SuccessMessage"]
            </div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-6 animate-slide-down">
            <div class="bg-gradient-to-r from-red-50 to-rose-50 border-l-4 border-red-500 text-red-700 px-6 py-4 rounded-lg shadow-md">
                <i class="fas fa-times-circle mr-2 text-lg"></i>
                <strong>Hata!</strong> @TempData["ErrorMessage"]
            </div>
        </div>
    }

    <!-- Dashboard Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-8">
        <div class="card animate-scale-up" style="animation-delay: 0s;">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Toplam Kullanƒ±cƒ±</p>
                        <p class="text-4xl font-bold text-blue-600 mt-2">@ViewBag.TotalUsers</p>
                    </div>
                    <i class="fas fa-users text-blue-200 text-4xl"></i>
                </div>
            </div>
        </div>
        <div class="card animate-scale-up" style="animation-delay: 0.1s;">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Aktif Kullanƒ±cƒ±</p>
                        <p class="text-4xl font-bold text-green-600 mt-2">@ViewBag.ActiveUsers</p>
                    </div>
                    <i class="fas fa-user-check text-green-200 text-4xl"></i>
                </div>
            </div>
        </div>
        <div class="card animate-scale-up" style="animation-delay: 0.2s;">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Toplam Soru</p>
                        <p class="text-4xl font-bold text-indigo-600 mt-2">@ViewBag.TotalThreads</p>
                    </div>
                    <i class="fas fa-comments text-indigo-200 text-4xl"></i>
                </div>
            </div>
        </div>
        <div class="card animate-scale-up" style="animation-delay: 0.3s;">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Toplam Cevap</p>
                        <p class="text-4xl font-bold text-purple-600 mt-2">@ViewBag.TotalPosts</p>
                    </div>
                    <i class="fas fa-reply text-purple-200 text-4xl"></i>
                </div>
            </div>
        </div>
        <div class="card animate-scale-up" style="animation-delay: 0.4s;">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Rol Sayƒ±sƒ±</p>
                        <p class="text-4xl font-bold text-red-600 mt-2">@ViewBag.TotalRoles</p>
                    </div>
                    <i class="fas fa-crown text-red-200 text-4xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-4">
            <h2 class="text-white text-xl font-bold"><i class="fas fa-list mr-2"></i>Kullanƒ±cƒ± Listesi</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="bg-gray-100 border-b-2 border-gray-200">
                    <tr class="text-left text-gray-700 font-semibold">
                        <th class="px-6 py-4">Adƒ±</th>
                        <th class="px-6 py-4">E-Posta</th>
                        <th class="px-6 py-4">Roller</th>
                        <th class="px-6 py-4">G√∂nderiler</th>
                        <th class="px-6 py-4">Durum</th>
                        <th class="px-6 py-4">√úye Olunca</th>
                        <th class="px-6 py-4">Son Giri≈ü</th>
                        <th class="px-6 py-4 text-center">ƒ∞≈ülemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr class="border-t hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 font-semibold text-gray-900">
                                <i class="fas fa-user-circle mr-2 text-blue-500"></i>@u.Name
                            </td>
                            <td class="px-6 py-4 text-gray-600">
                                <i class="fas fa-envelope mr-2"></i>@u.Email
                            </td>
                            <td class="px-6 py-4">
                                @if (u.Roles.Any())
                                {
                                    @foreach (var role in u.Roles)
                                    {
                                        <span class="inline-block bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-xs font-semibold mr-2 mb-1">
                                            <i class="fas fa-crown mr-1"></i>@role
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-gray-500 text-xs italic">Rol yok</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                <a href="/Admin/UserPosts/@u.Id" class="text-indigo-600 hover:text-indigo-800 font-bold">
                                    <i class="fas fa-arrow-right mr-1"></i>@u.PostCount
                                </a>
                            </td>
                            <td class="px-6 py-4">
                                @if (u.IsActive)
                                {
                                    <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-semibold">
                                        <i class="fas fa-check-circle mr-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-block bg-red-100 text-red-800 px-3 py-1 rounded-full text-xs font-semibold">
                                        <i class="fas fa-times-circle mr-1"></i>Pasif
                                    </span>
                                }
                                @if (u.IsBanned)
                                {
                                    <span class="inline-block bg-red-100 text-red-800 px-3 py-1 rounded-full text-xs font-semibold mt-1">
                                        <i class="fas fa-ban mr-1"></i>Yasaklƒ±
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-xs text-gray-600">
                                <i class="fas fa-calendar mr-1"></i>@u.CreatedAt.ToString("dd.MM.yyyy")
                            </td>
                            <td class="px-6 py-4 text-xs text-gray-600">
                                @if (u.LastLogin.HasValue)
                                {
                                    <i class="fas fa-clock mr-1"></i>@u.LastLogin.Value.ToString("dd.MM.yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="italic">Hen√ºz</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-wrap gap-2 justify-center">
                                    <!-- Manage Roles -->
                                    <a href="/Admin/ManageRoles/@u.Id" class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1 rounded text-xs font-semibold inline-block transition-all transform hover:scale-105 active:scale-95">
                                        <i class="fas fa-lock-open mr-1"></i>Roller
                                    </a>

                                    <!-- Toggle Admin -->
                                    <form asp-action="ToggleAdmin" method="post" class="inline">
                                        <input type="hidden" name="id" value="@u.Id" />
                                        <button type="submit" class="@(u.IsAdmin ? "bg-indigo-500 hover:bg-indigo-600" : "bg-gray-400 hover:bg-gray-500") text-white px-3 py-1 rounded text-xs font-semibold transition-all transform hover:scale-105 active:scale-95">
                                            @(u.IsAdmin ? "üëë Kaldƒ±r" : "üëë Yap")
                                        </button>
                                    </form>

                                    <!-- Toggle Active -->
                                    <form asp-action="ToggleActive" method="post" class="inline">
                                        <input type="hidden" name="id" value="@u.Id" />
                                        <button type="submit" class="@(u.IsActive ? "bg-green-500 hover:bg-green-600" : "bg-orange-500 hover:bg-orange-600") text-white px-3 py-1 rounded text-xs font-semibold transition-all transform hover:scale-105 active:scale-95">
                                            @(u.IsActive ? "‚úì Aktif" : "‚úó Pasif")
                                        </button>
                                    </form>

                                    <!-- Reset Password -->
                                    <a href="/Admin/ResetPassword/@u.Id" class="bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-1 rounded text-xs font-semibold inline-block transition-all transform hover:scale-105 active:scale-95">
                                        <i class="fas fa-key mr-1"></i>≈ûifre Sƒ±fƒ±rla
                                    </a>

                                    <!-- Warn User -->
                                    <a href="/Admin/WarnUser/@u.Id" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-xs font-semibold inline-block transition-all transform hover:scale-105 active:scale-95">
                                        ‚ö†Ô∏è Uyar
                                    </a>

                                    <!-- Ban/Unban User -->
                                    @if (u.IsBanned)
                                    {
                                        <a href="/Admin/UnbanUser/@u.Id" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-xs font-semibold inline-block transition-all transform hover:scale-105 active:scale-95">
                                            ‚úì Yasak Kaldƒ±r
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/Admin/BanUser/@u.Id" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-xs font-semibold inline-block transition-all transform hover:scale-105 active:scale-95">
                                            üö´ Yasakla
                                        </a>
                                    }

                                    <!-- Delete User -->
                                    <form asp-action="DeleteUser" method="post" class="inline" onsubmit="return confirm('Bu kullanƒ±cƒ±yƒ± ve t√ºm verilerini silmek istediƒüinize emin misiniz? Bu i≈ülem geri alƒ±namaz!');">
                                        <input type="hidden" name="id" value="@u.Id" />
                                        <button type="submit" class="bg-black hover:bg-gray-800 text-white px-3 py-1 rounded text-xs font-semibold transition-all transform hover:scale-105 active:scale-95">
                                            üóëÔ∏è Sil
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

