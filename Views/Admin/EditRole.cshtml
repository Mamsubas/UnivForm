@model UnivForm.Controllers.AdminController.EditRoleViewModel

@{
    ViewData["Title"] = "Rol Düzenle";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold mb-6">Rol Düzenle: @Model.Name</h1>

        <form method="post" class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Rol Adı</label>
                <input type="text" value="@Model.Name" disabled class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100" readonly>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Açıklama</label>
                <textarea name="description" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">@Model.Description</textarea>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Bu Rolde Olan Kullanıcılar (@Model.Users.Count)</label>
                <div class="bg-gray-50 border border-gray-300 rounded-lg p-4 max-h-40 overflow-y-auto">
                    @if (Model.Users.Any())
                    {
                        <ul class="space-y-1">
                            @foreach (var user in Model.Users)
                            {
                                <li class="text-sm text-gray-700">• @user</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-sm text-gray-500">Bu rolde kullanıcı yok.</p>
                    }
                </div>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg">
                    Güncelle
                </button>
                <a href="/Admin/Roles" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-900 font-medium py-2 px-4 rounded-lg text-center">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>
