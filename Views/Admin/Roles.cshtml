@model IEnumerable<UnivForm.Controllers.AdminController.AdminRoleViewModel>

@{
    ViewData["Title"] = "Rol Yönetimi";
}

<div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Rol Yönetimi</h1>
        <a href="/Admin/CreateRole" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
            ➕ Yeni Rol Oluştur
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-100">
                <tr class="text-left text-sm text-gray-600">
                    <th class="px-6 py-3">Rol Adı</th>
                    <th class="px-6 py-3">Açıklama</th>
                    <th class="px-6 py-3">Kullanıcı Sayısı</th>
                    <th class="px-6 py-3">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr class="border-t hover:bg-gray-50">
                        <td class="px-6 py-3 font-medium">@role.Name</td>
                        <td class="px-6 py-3">@role.Description</td>
                        <td class="px-6 py-3">
                            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded">@role.UserCount</span>
                        </td>
                        <td class="px-6 py-3 space-x-2">
                            <a href="/Admin/EditRole/@role.Id" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm">
                                Düzenle
                            </a>
                            <form asp-action="DeleteRole" method="post" class="inline">
                                <input type="hidden" name="id" value="@role.Id" />
                                <button type="submit" onclick="return confirm('Bu rolü silmek istediğinize emin misiniz?');" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm">
                                    Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
