@using Microsoft.AspNetCore.Identity
@using UnivForm.Data
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnivForm</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body class="bg-gradient-to-b from-gray-50 to-gray-100 text-gray-900 flex flex-col min-h-screen">
    <header>
        <nav class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    
                    <div class="flex items-center space-x-6">
                        <a class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent" asp-area="" asp-controller="Home" asp-action="Index">UnivForm</a>
                        
                        <ul class="hidden sm:flex space-x-6">
                            <li>
                                <a class="text-gray-700 hover:text-blue-600 transition font-medium" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                            </li>
                            <li>
                                <a class="text-gray-700 hover:text-blue-600 transition font-medium" asp-area="" asp-controller="Forum" asp-action="Index">Forum</a>
                            </li>
                            <li>
                                <a class="text-gray-700 hover:text-blue-600 transition font-medium" asp-area="" asp-controller="Home" asp-action="More">Hakkımızda</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a class="text-red-600 hover:text-red-800 transition font-bold" asp-area="" asp-controller="Category" asp-action="Index">⚙️ Kategori Yönetimi</a>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="flex items-center space-x-3">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <span class="text-gray-700 text-sm font-medium hidden sm:inline px-3 py-2 rounded-lg bg-blue-50">
                                👤 @UserManager.GetUserAsync(User).Result?.FirstName
                            </span>
                            
                            @if (User.IsInRole("Student"))
                            {
                                <a asp-controller="Student" asp-action="Dashboard" class="hidden sm:inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition">
                                    📊 Gösterge Paneli
                                </a>
                            }
                            
                            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="inline">
                                <button type="submit" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-red-50 hover:border-red-300 hover:text-red-600 transition">
                                    <i class="fas fa-sign-out-alt mr-2"></i>Çıkış
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="hidden sm:flex items-center space-x-2">
                                <a asp-controller="Account" asp-action="Login" class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 transition">
                                    Yönetici Giriş
                                </a>
                                <span class="text-gray-300">|</span>
                            </div>
                            
                            <a asp-controller="Student" asp-action="Login" class="inline-flex items-center px-4 py-2 border-2 border-blue-600 text-sm font-bold rounded-lg text-blue-600 bg-white hover:bg-blue-50 transition">
                                👨‍🎓 Öğrenci Giriş
                            </a>
                            
                            <a asp-controller="Student" asp-action="Register" class="hidden sm:inline-flex items-center px-4 py-2 text-sm font-bold rounded-lg text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 transition shadow-md">
                                ✨ Kayıt Ol
                            </a>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow w-full">
        @RenderBody()
    </main>

    <footer class="border-t border-gray-200 bg-white w-full mt-12 shadow-inner">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
                <div>
                    <h3 class="text-lg font-bold text-blue-600 mb-4">UnivForm</h3>
                    <p class="text-gray-600 text-sm">Üniversite öğrencileri için forum ve başvuru platformu.</p>
                </div>
                <div>
                    <h4 class="font-bold text-gray-900 mb-4">Hızlı Bağlantılar</h4>
                    <ul class="space-y-2 text-sm">
                        <li><a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-blue-600">Anasayfa</a></li>
                        <li><a asp-controller="Forum" asp-action="Index" class="text-gray-600 hover:text-blue-600">Forum</a></li>
                        <li><a asp-controller="Home" asp-action="More" class="text-gray-600 hover:text-blue-600">Hakkımızda</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-bold text-gray-900 mb-4">İletişim</h4>
                    <p class="text-gray-600 text-sm">
                        Email: info@univform.com<br />
                        Telefon: +90 (xxx) xxx-xxxx
                    </p>
                </div>
            </div>
            <div class="border-t border-gray-200 pt-8 text-center text-gray-600 text-sm">
                &copy; 2025 - UnivForm. Tüm hakları saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>