@using Microsoft.AspNetCore.Identity
@using UnivForm.Data
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnivForm</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body class="bg-gradient-to-b from-gray-50 to-gray-100 text-gray-900 flex flex-col min-h-screen">
    <header>
        <nav class="bg-white border-b border-gray-200 shadow-lg sticky top-0 z-50 animate-slide-down">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <div class="flex items-center space-x-6">
                        <a class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent hover:scale-110 transition-transform" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-graduation-cap mr-2"></i>UnivForm
                        </a>
                        
                        <ul class="hidden sm:flex space-x-2">
                            <li><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home mr-1"></i>Anasayfa</a></li>
                            <li><a class="nav-link" asp-area="" asp-controller="Forum" asp-action="Index"><i class="fas fa-comments mr-1"></i>Forum</a></li>
                            <li><a class="nav-link" asp-area="" asp-controller="Home" asp-action="More"><i class="fas fa-info-circle mr-1"></i>Hakkımızda</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="nav-link text-red-600 hover:text-red-800" asp-area="" asp-controller="Category" asp-action="Index"><i class="fas fa-cog mr-1"></i>Kategori</a></li>
                                <li><a class="nav-link text-red-600 hover:text-red-800" asp-area="" asp-controller="Admin" asp-action="Index"><i class="fas fa-tools mr-1"></i>Yönetici</a></li>
                            }
                        </ul>
                    </div>

                    <div class="flex items-center space-x-3">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="hidden sm:inline-flex items-center px-4 py-2 rounded-lg bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200">
                                <i class="fas fa-user mr-2 text-blue-600"></i>
                                <span class="text-gray-800 font-semibold">@UserManager.GetUserAsync(User).Result?.FirstName</span>
                            </div>
                            
                            @if (User.IsInRole("Student"))
                            {
                                <a asp-controller="Student" asp-action="Dashboard" class="hidden sm:inline-flex btn-secondary"><i class="fas fa-chart-line mr-2"></i>Panelim</a>
                            }
                            
                            <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                                <button type="submit" class="btn-danger"><i class="fas fa-sign-out-alt mr-2"></i>Çıkış</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="hidden sm:inline-flex items-center px-3 py-2 text-gray-700 hover:text-blue-600 transition-colors"><i class="fas fa-lock mr-1"></i>Yönetici</a>
                            <a asp-controller="Student" asp-action="Login" class="btn-primary"><i class="fas fa-sign-in-alt mr-2"></i>Giriş</a>
                            <a asp-controller="Student" asp-action="Register" class="hidden sm:inline-flex btn-primary"><i class="fas fa-user-plus mr-2"></i>Kayıt</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow w-full animate-fade-in">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="max-w-7xl mx-auto mb-4 animate-slide-down">
                <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-l-4 border-green-500 text-green-700 px-4 py-3 rounded-lg shadow-md">
                    <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="max-w-7xl mx-auto mb-4 animate-slide-down">
                <div class="bg-gradient-to-r from-red-50 to-rose-50 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded-lg shadow-md">
                    <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="border-t border-gray-200 bg-gradient-to-b from-white to-gray-50 w-full mt-12 shadow-inner">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
                <div class="animate-slide-in-left">
                    <h3 class="text-lg font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent mb-4">
                        <i class="fas fa-graduation-cap mr-2"></i>UnivForm
                    </h3>
                    <p class="text-gray-600 text-sm">Üniversite öğrencileri için forum ve başvuru platformu.</p>
                </div>
                <div class="animate-slide-in-left" style="animation-delay: 0.1s;">
                    <h4 class="font-bold text-gray-900 mb-4"><i class="fas fa-link mr-2"></i>Hızlı Bağlantılar</h4>
                    <ul class="space-y-2 text-sm">
                        <li><a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-blue-600 transition-colors"><i class="fas fa-arrow-right mr-1"></i>Anasayfa</a></li>
                        <li><a asp-controller="Forum" asp-action="Index" class="text-gray-600 hover:text-blue-600 transition-colors"><i class="fas fa-arrow-right mr-1"></i>Forum</a></li>
                        <li><a asp-controller="Home" asp-action="More" class="text-gray-600 hover:text-blue-600 transition-colors"><i class="fas fa-arrow-right mr-1"></i>Hakkımızda</a></li>
                    </ul>
                </div>
                <div class="animate-slide-in-left" style="animation-delay: 0.2s;">
                    <h4 class="font-bold text-gray-900 mb-4"><i class="fas fa-envelope mr-2"></i>İletişim</h4>
                    <p class="text-gray-600 text-sm">
                        <i class="fas fa-envelope mr-2"></i>info@univform.com<br />
                        <i class="fas fa-phone mr-2"></i>+90 (xxx) xxx-xxxx
                    </p>
                </div>
            </div>
            <div class="border-t border-gray-200 pt-8 text-center text-gray-600 text-sm">
                <i class="fas fa-copyright mr-1"></i>2025 - UnivForm. Tüm hakları saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>