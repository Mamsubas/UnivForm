@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="relative w-full bg-gradient-to-br from-sky-100 via-indigo-50 to-purple-100 py-24 md:py-32 rounded-xl">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16 items-center">
            
            <div class="text-left animate-fade-in">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 leading-tight">
                    Üniversite Öğrenci Forum Sayfasına Hoş Geldiniz!
                </h1>
                <p class="text-lg md:text-xl mb-3 font-medium text-indigo-600">
                    <i class="fas fa-users mr-2"></i>Bilgi Paylaş, Soru Sor, Arkadaş Bul
                </p>
                <p class="text-base md:text-lg mb-8 text-gray-600 leading-relaxed">
                    Üniversite yaşamının tüm yönleri hakkında öğrencilerle iletişim kur, bilgi paylaş ve deneyim kazan. Derslerden sosyal etkinliklere kadar her konuda tartışma yapabilirsin.
                </p>

                <div class="flex flex-col sm:flex-row gap-4 pt-4">
                    <a asp-controller="Forum" asp-action="Index" class="inline-block bg-indigo-600 text-white hover:bg-indigo-700 font-bold py-3 px-7 rounded-lg transition-all duration-300 transform hover:scale-105 text-center shadow-md hover:shadow-lg">
                        <i class="fas fa-comments mr-2"></i>Forumlara Gözat
                    </a>
                    <a asp-controller="Home" asp-action="More" class="inline-block bg-transparent text-gray-700 hover:bg-gray-100 font-bold py-3 px-7 rounded-lg transition-all duration-300 text-center border-2 border-gray-300 hover:border-gray-400">
                        <i class="fas fa-info-circle mr-2"></i>Daha Fazla Bilgi
                    </a>
                </div>

                <!-- Dinamik İstatistik Kartları -->
                <div class="mt-12 grid grid-cols-3 gap-4 text-left">
                    <div class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow animate-scale-up">
                        <p class="text-3xl font-bold text-indigo-600">@ViewBag.TotalUsers</p>
                        <p class="text-sm text-gray-500">
                            <i class="fas fa-user-check mr-1 text-green-500"></i>Aktif Üye
                        </p>
                    </div>
                    <div class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow animate-scale-up" style="animation-delay: 0.1s;">
                        <p class="text-3xl font-bold text-indigo-600">@ViewBag.TotalQuestions</p>
                        <p class="text-sm text-gray-500">
                            <i class="fas fa-comments mr-1 text-blue-500"></i>Konu
                        </p>
                    </div>
                    <div class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow animate-scale-up" style="animation-delay: 0.2s;">
                        <p class="text-3xl font-bold text-indigo-600">@ViewBag.TotalAnswers</p>
                        <p class="text-sm text-gray-500">
                            <i class="fas fa-reply mr-1 text-purple-500"></i>Yorum
                        </p>
                    </div>
                </div>
            </div>

            <!-- Popüler Konular Kartı -->
            <div class="hidden md:block">
                <div class="relative w-full max-w-md">
                    <div class="bg-white rounded-xl shadow-xl overflow-hidden animate-slide-in-left">
                        <div class="bg-gradient-to-br from-indigo-600 to-purple-600 p-6 text-white">
                            <h3 class="text-xl font-bold">
                                <i class="fas fa-fire text-orange-300 mr-2"></i>Popüler Konular
                            </h3>
                            <p class="text-indigo-100 text-sm">En çok tartışılan başlıklar</p>
                        </div>
                        
                        <div class="p-4 max-h-96 overflow-y-auto">
                            @if (ViewBag.PopularTopics != null && ViewBag.PopularTopics.Count > 0)
                            {
                                @foreach (var topic in ViewBag.PopularTopics.Take(5))
                                {
                                    <div class="mb-4 pb-4 border-b border-gray-200 last:border-0 hover:bg-gray-50 p-2 rounded transition-colors">
                                        <a asp-controller="Forum" asp-action="Details" asp-route-id="@topic.Id" 
                                           class="font-semibold text-indigo-600 hover:text-indigo-800 block text-sm truncate">
                                            @topic.Title
                                        </a>
                                        <p class="text-xs text-gray-500 mt-1">
                                            <i class="fas fa-user mr-1"></i>@topic.Author
                                        </p>
                                        <div class="flex gap-3 mt-2 text-xs text-gray-600">
                                            <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded">
                                                <i class="fas fa-comments mr-1"></i>@topic.PostCount yorum
                                            </span>
                                            <span class="bg-purple-100 text-purple-700 px-2 py-1 rounded">
                                                <i class="fas fa-eye mr-1"></i>@topic.ViewCount görüntü
                                            </span>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-8 text-gray-500">
                                    <i class="fas fa-inbox text-3xl mb-2 block opacity-50"></i>
                                    <p>Henüz konu yok</p>
                                </div>
                            }
                        </div>
                        
                        <div class="bg-gray-50 p-4 border-t text-center">
                            <a asp-controller="Home" asp-action="PopularTopics" 
                               class="text-indigo-600 hover:text-indigo-800 font-semibold text-sm">
                                Tüm Popüler Konuları Gör
                                <i class="fas fa-arrow-right ml-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce hidden md:block opacity-75">
        <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>