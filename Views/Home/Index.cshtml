@{
    ViewData[index: "Title"] = "Home Page";
}


<section class="relative w-full bg-sky-100 py-24 md:py-32 rounded-xl ">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16 items-center">
            
            <div class="text-left">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 leading-tight">
                    Üniversite Öğrenci Forum Sayfasına Hoş Geldiniz!
                </h1>
                <p class="text-lg md:text-xl mb-3 font-medium text-indigo-600">
                    <i class="fas fa-users mr-2"></i>Bilgi Paylaş, Soru Sor, Arkadaş Bul
                </p>
                <p class="text-base md:text-lg mb-8 text-gray-600 leading-relaxed">
                    Üniversite yaşamının tüm yönleri hakkında öğrencilerle iletişim kur, bilgi paylaş ve deneyim kazan. Derslerden sosyal etkinliklere kadar her konuda tartışma yapabilirsin.
                </p>

                <div class="flex flex-col sm:flex-row gap-4 pt-4">
                    <a asp-controller="Forum" asp-action="Index" class="inline-block bg-indigo-600 text-white hover:bg-indigo-700 font-bold py-3 px-7 rounded-lg transition-all duration-300 transform hover:scale-105 text-center shadow-md hover:shadow-lg">
                        <i class="fas fa-comments mr-2"></i>Forumlara Gözat
                    </a>
                    <a asp-controller="Home" asp-action="More" class="inline-block bg-transparent text-gray-700 hover:bg-gray-100 font-bold py-3 px-7 rounded-lg transition-all duration-300 text-center border-2 border-gray-300 hover:border-gray-400">
                        <i class="fas fa-info-circle mr-2"></i>Daha Fazla Bilgi
                    </a>
                </div>

                <div class="mt-12 grid grid-cols-3 gap-6 text-left">
                    <div>
                        <p class="text-3xl font-bold text-indigo-600">2,450+</p>
                        <p class="text-gray-500">Aktif Üye</p>
                    </div>
                    <div>
                        <p class="text-3xl font-bold text-indigo-600">12,890+</p>
                        <p class="text-gray-500">Konu</p>
                    </div>
                    <div>
                        <p class="text-3xl font-bold text-indigo-600">45,230+</p>
                        <p class="text-gray-500">Yorum</p>
                    </div>
                </div>
            </div>

            <div class="hidden md:flex justify-center items-center">
                <div class="relative w-full max-w-md h-96">
                    <div class="relative w-full h-full bg-gray-200 rounded-xl shadow-xl overflow-hidden">
                        
                        <div class="w-full h-full flex items-center justify-center bg-gray-200">
                             <i class="fas fa-image text-9xl text-gray-400 opacity-50"></i>
                        </div>

                        <div class="absolute inset-0 bg-indigo-500 opacity-10 mix-blend-multiply"></div>

                        <div class="absolute bottom-6 left-6 bg-white p-4 rounded-lg shadow-lg animate-pulse">
                            <p class="font-semibold text-indigo-700">Günün Konusu</p>
                            <p class="text-sm text-gray-600">"Final haftası için en iyi çalışma tüyoları?"</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce hidden md:block opacity-75">
        <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>