@{
    ViewData["Title"] = "Gösterge Paneli";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Hoş Geldiniz, @ViewBag.User.FirstName!</h1>
            <p class="text-gray-600">Aktiviteniz ve istatistiklerinizi buradan takip edebilirsiniz.</p>
        </div>

        <!-- Statistics Grid -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Sorular</p>
                        <p class="text-3xl font-bold text-indigo-600 mt-2">@ViewBag.PostCount</p>
                    </div>
                    <div class="bg-indigo-100 p-4 rounded-lg">
                        <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Cevaplar</p>
                        <p class="text-3xl font-bold text-green-600 mt-2">@ViewBag.AnswerCount</p>
                    </div>
                    <div class="bg-green-100 p-4 rounded-lg">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Beğeniler</p>
                        <p class="text-3xl font-bold text-red-600 mt-2">@ViewBag.LikesReceived</p>
                    </div>
                    <div class="bg-red-100 p-4 rounded-lg">
                        <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium">Üye Olduğundan</p>
                        <p class="text-lg font-bold text-purple-600 mt-2">@ViewBag.User.CreatedAt.ToString("dd.MM.yyyy")</p>
                    </div>
                    <div class="bg-purple-100 p-4 rounded-lg">
                        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Recent Posts -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Son Sorularınız</h2>
                    @if (ViewBag.RecentPosts?.Count > 0)
                    {
                        <div class="space-y-4">
                            @foreach (var post in ViewBag.RecentPosts)
                            {
                                <div class="border-l-4 border-indigo-500 pl-4 py-2 hover:bg-gray-50 transition">
                                    <h3 class="font-semibold text-gray-900">@post.Title</h3>
                                    <p class="text-sm text-gray-600 mt-1">@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                                    <a href="/Forum/ThreadDetail/@post.Id" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium mt-2 inline-block">
                                        Detayları Gör →
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-gray-500">Henüz soru sorulmamış.</p>
                    }
                </div>

                <!-- Recent Replies -->
                <div class="bg-white rounded-lg shadow-md p-6 mt-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Son Cevaplarınız</h2>
                    @if (ViewBag.RecentReplies?.Count > 0)
                    {
                        <div class="space-y-4">
                            @foreach (var reply in ViewBag.RecentReplies)
                            {
                                <div class="border-l-4 border-green-500 pl-4 py-2 hover:bg-gray-50 transition">
                                    <p class="text-gray-900 line-clamp-2">@reply.Content</p>
                                    <p class="text-sm text-gray-600 mt-1">@reply.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-gray-500">Henüz cevap verilmemiş.</p>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Hızlı Erişim</h2>
                    <div class="space-y-3">
                        <a href="/UserProfile/Edit" class="block w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-3 px-4 rounded-lg text-center transition">
                            Profili Düzenle
                        </a>
                        <a href="/Forum/CreateThread" class="block w-full bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-4 rounded-lg text-center transition">
                            Soru Sor
                        </a>
                        <a href="/Forum" class="block w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg text-center transition">
                            Forumlara Dön
                        </a>
                    </div>
                </div>

                <!-- Profile Preview -->
                <div class="bg-white rounded-lg shadow-md p-6 mt-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Profil Özeti</h2>
                    <div class="text-center">
                        @if (!string.IsNullOrEmpty(ViewBag.User.ProfileImageUrl))
                        {
                            <img src="@ViewBag.User.ProfileImageUrl" alt="@ViewBag.User.FirstName" class="w-24 h-24 rounded-full mx-auto mb-4 object-cover border-4 border-indigo-100">
                        }
                        else
                        {
                            <div class="w-24 h-24 rounded-full mx-auto mb-4 bg-indigo-100 flex items-center justify-center border-4 border-indigo-100">
                                <svg class="w-12 h-12 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                        }
                        <h3 class="text-lg font-semibold text-gray-900">@ViewBag.User.FirstName @ViewBag.User.LastName</h3>
                        <p class="text-sm text-gray-600 mt-2">@ViewBag.User.Email</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
