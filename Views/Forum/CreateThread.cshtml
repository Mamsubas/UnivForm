@model UnivForm.Models.ViewModels.CreateThreadViewModel
@{
    ViewData["Title"] = "Yeni Konu Oluştur";
}

<div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Yeni Konu Oluştur</h1>

    <form asp-action="CreateThread" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-3 rounded-md"></div>
        
        <div>
            <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                <option value="">-- Kategori Seçin --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div>
            <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Title" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            <span asp-validation-for="Title" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div>
            <label asp-for="Content" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <textarea asp-for="Content" rows="8" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
            <span asp-validation-for="Content" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div class="flex justify-end gap-4">
            <a asp-action="Index" class="inline-flex items-center px-6 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none">
                İptal
            </a>
            <button type="submit" class="inline-flex justify-center py-2 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Konuyu Oluştur
            </button>
            <a asp-controller="Category" asp-action="Create" class="inline-flex justify-center py-2 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <i class="fas fa-plus mr-2"></i>Yeni Kategori Ekle
            </a>
        </div>
    </form>
</div>