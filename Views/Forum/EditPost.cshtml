@model Post 
@{
    ViewData["Title"] = "Yorum Düzenle";
}
<div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Yorum Düzenle</h1>

    <form asp-action="EditPost" asp-route-id="@Model.Id" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        
        <div>
            <label for="content" class="block text-sm font-medium text-gray-700 mb-1">Yorumunuz</label>
            <textarea id="content" name="content" rows="8" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">@Model.Content</textarea>
            </div>

        <div class="flex justify-end gap-4">
            <a asp-controller="Forum" asp-action="ThreadDetail" asp-route-id="@Model.ForumThreadId" class="inline-flex items-center px-6 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none">
                İptal
            </a>
            <button type="submit" class="inline-flex justify-center py-2 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none">
                Kaydet
            </button>
        </div>
    </form>
</div>