@model UnivForm.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Parola Sıfırlama";
}

<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold mb-4">Parola Sıfırlama</h2>
    <form asp-action="ForgotPassword" method="post">
        <div class="mb-4">
            <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Email" class="mt-1 block w-full border rounded p-2" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>
        <div class="flex justify-end gap-2">
            <a asp-action="Login" class="btn-secondary">Geri</a>
            <button type="submit" class="btn-primary">Sıfırlama Linki Gönder</button>
        </div>
    </form>
</div>
