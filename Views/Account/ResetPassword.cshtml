@model UnivForm.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Parola Sıfırla";
}
<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold mb-4">Yeni Parola Belirle</h2>
    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Token" />
        <div class="mb-4">
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Password" class="mt-1 block w-full border rounded p-2" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="ConfirmPassword" class="mt-1 block w-full border rounded p-2" />
            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>
        <div class="flex justify-end gap-2">
            <a asp-action="Login" class="btn-secondary">Geri</a>
            <button type="submit" class="btn-primary">Parolayı Sıfırla</button>
        </div>
    </form>
</div>