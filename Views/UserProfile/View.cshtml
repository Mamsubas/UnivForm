                    <div class="mt-4 sm:mt-0">
                        <h1 class="text-3xl font-bold text-gray-900">@Model.FirstName @Model.LastName</h1>
                        <p class="text-gray-600">@Model.Email</p>
                        @if (Model.PhoneNumber != null)
