                        <p class="text-gray-700">@Model.Biography</p>
                    </div>
                }

                <!-- Stats -->
                <div class="mt-6 grid grid-cols-3 gap-4">
                    <div class="bg-indigo-50 rounded-lg p-4 text-center">
                        <p class="text-2xl font-bold text-indigo-600">@ViewBag.PostCount</p>
                        <p class="text-gray-600 text-sm">Sorular</p>
                    </div>
                    <div class="bg-green-50 rounded-lg p-4 text-center">
