                    {
                        <img src="@Model.ProfileImageUrl" alt="@Model.FirstName" class="h-32 w-32 rounded-full border-4 border-white object-cover">
                    }
                    else
                    {
                        <div class="h-32 w-32 rounded-full border-4 border-white bg-indigo-100 flex items-center justify-center">
